<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Eurotext\TranslationManager\Api\ProjectRepositoryInterface" type="Eurotext\TranslationManager\Repository\ProjectRepository" />
    <preference for="Eurotext\TranslationManager\Api\ProjectProductRepositoryInterface" type="Eurotext\TranslationManager\Repository\ProjectProductRepository" />

    <preference for="Eurotext\RestApiClient\ConfigurationInterface" type="Eurotext\TranslationManager\ApiClient\Configuration" />

    <!-- @todo add projectV1Api Interface so Client is pulled in using an interface -->
    <preference for="Eurotext\RestApiClient\Api\ProjectV1Api" type="Eurotext\TranslationManager\ApiClient\ProjectV1Api" />

    <type name="Eurotext\TranslationManager\Command\NewProjectCommand">
        <arguments>
            <argument name="newProject" xsi:type="object">Eurotext\TranslationManager\Command\Service\NewProjectService\Proxy</argument>
        </arguments>
    </type>

    <type name="Eurotext\TranslationManager\Command\SendProjectCommand">
        <arguments>
            <argument name="sendProject" xsi:type="object">Eurotext\TranslationManager\Service\SendProjectService\Proxy</argument>
        </arguments>
    </type>

    <type name="Eurotext\TranslationManager\Seeder\EntitySeederPool">
        <arguments>
            <argument name="items" xsi:type="array">
                <item name="product_seeder" xsi:type="object">Eurotext\TranslationManager\Seeder\ProductSeeder</item>
            </argument>
        </arguments>
    </type>

    <type name="Eurotext\TranslationManager\Sender\EntitySenderPool">
        <arguments>
            <argument name="items" xsi:type="array">
                <item name="product_sender" xsi:type="object">Eurotext\TranslationManager\Sender\ProductSender</item>
            </argument>
        </arguments>
    </type>

    <type name="Eurotext\TranslationManager\Receiver\EntityReceiverPool">
        <arguments>
            <argument name="items" xsi:type="array">
                <item name="product_receiver" xsi:type="object">Eurotext\TranslationManager\Receiver\ProductReceiver</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="eurotext_project_new" xsi:type="object">Eurotext\TranslationManager\Command\NewProjectCommand</item>
                <item name="eurotext_project_send" xsi:type="object">Eurotext\TranslationManager\Command\SendProjectCommand</item>
            </argument>
        </arguments>
    </type>
</config>
